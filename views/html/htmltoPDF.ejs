
<h1> User List</h1>

<table width="100%">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Image</th>
        <th>Verified</th>
    </tr>

    <%
    if(users.length > 0 ){
        for(let i=0 ; i<users.length ; i++){
            %>
            <tr>
                <td><%= users[i].name%></td>
                <td><%= users[i].email%></td>
                <td>
                <img src="http://127.0.0.1:5000//userImages/<%= users[i].image%>" alt="<%= users[i].image%>" height="50px" width="50px" ></td>
                <td>
                    <% 
                    if(users[i].is_verified == 0 ){
                        %>
                        <p>Not Verified</p>
                        <%
                    }else{
                        %>
                        <p>Verified</p>
                        <%
                    }
                    %>
                </td>
           
            </tr>
            <%
        }

    }else{
        %>
        <tr>
            <td>User Not Found</td>
        </tr>
        <%
    }
    %>



</table>

</body>
</html>